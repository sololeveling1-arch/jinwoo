      overflow: hidden;
    }

    .wish-box {
      background: rgba(255, 182, 193, 0.9);
      padding: 40px;
      border-radius: 25px;
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
      max-width: 600px;
      animation: popIn 1s ease;
      position: relative;
      z-index: 10;
    }

    @keyframes popIn {
      0% { opacity: 0; transform: scale(0.5) rotate(-5deg); }
      100% { opacity: 1; transform: scale(1) rotate(0); }
    }

    h1 {
      font-size: 2.2em;
      margin-bottom: 25px;
