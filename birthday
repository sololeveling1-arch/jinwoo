<body>

  <canvas id="confetti-canvas"></canvas>

  <div class="wish-box" id="wishBox">
    <h1 id="wish">üéâ Happy Birthday! Wishing you joy and smiles! üéÇ</h1>
    <button id="nextBtn" onclick="nextWish()">Click</button>
  </div>

  <script>
    const wishes = [
      "üéâ Happy Birthday! Wishing you joy and smiles! üéÇ",
      "üå∏ May your birthday overflow with happiness and love!",
      "üéÅ You're a gift to everyone who knows you!",
      "üíñ Shine bright like the star you are!",
      "üéà Let the celebrations be endless ‚Äî you deserve it!",
      "üç∞ Eat cake, laugh loud, live fully!"
    ];

    let index = 0;

    function nextWish() {
      index++;
      triggerConfetti();
      triggerHearts();
      const wishEl = document.getElementById("wish");
      if (index < wishes.length) {
        wishEl.style.animation = "none";
        void wishEl.offsetWidth;
        wishEl.textContent = wishes[index];
        wishEl.style.animation = "bounceIn 1s ease";
        if (index === wishes.length - 1) {
          document.getElementById("nextBtn").textContent = "Last üéâ";
        }
      } else {
        document.getElementById("nextBtn").textContent = "No more wishes üéâ";
        document.getElementById("nextBtn").disabled = true;
      }
    }

    const canvas = document.getElementById("confetti-canvas");
    const ctx = canvas.getContext("2d");
    let confetti = [];

    function resizeCanvas() {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    }
    window.addEventListener("resize", resizeCanvas);
    resizeCanvas();

    function createConfettiPiece() {
      return {
        x: Math.random() * canvas.width,
        y: -10,
        size: Math.random() * 8 + 2,
        color: `hsl(${Math.random() * 360}, 100%, 70%)`,
        speedY: Math.random() * 3 + 2,
        speedX: Math.random() * 2 - 1,
        rotation: Math.random() * 360,
        rotationSpeed: Math.random() * 10 - 5
      };
    }

    function updateConfetti() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      confetti.forEach((c, i) => {
        c.x += c.speedX;
        c.y += c.speedY;
        c.rotation += c.rotationSpeed;

        ctx.save();
        ctx.translate(c.x, c.y);
        ctx.rotate((c.rotation * Math.PI) / 180);
        ctx.fillStyle = c.color;
        ctx.fillRect(-c.size / 2, -c.size / 2, c.size, c.size);
        ctx.restore();

        if (c.y > canvas.height) confetti.splice(i, 1);
      });
    }

    function triggerConfetti() {
      for (let i = 0; i < 100; i++) {
        confetti.push(createConfettiPiece());
      }
    }

    function animate() {
      updateConfetti();
      requestAnimationFrame(animate);
    }

    animate();

    function triggerHearts() {
      for (let i = 0; i < 16; i++) {
        const heart = document.createElement("div");
        heart.classList.add("heart");
        heart.innerText = "üíñ";

        const offsetX = Math.random() * window.innerWidth;
        heart.style.left = offsetX + "px";
        heart.style.top = window.innerHeight + "px";
        heart.style.fontSize = (Math.random() * 10 + 16) + "px";

        document.body.appendChild(heart);
        setTimeout(() => {
          heart.remove();
        }, 3200);
      }
    }

    function addFloatingHearts() {
      const positions = [
        { top: '5%', left: '5%' },
        { top: '15%', right: '8%' },
        { bottom: '10%', left: '10%' },
        { bottom: '15%', right: '5%' },
        { top: '30%', left: '2%' },
        { top: '35%', right: '3%' },
        { bottom: '5%', left: '25%' },
        { top: '45%', right: '5%' },
        { top: '60%', left: '3%' },
        { bottom: '30%', right: '2%' }
      ];

      positions.forEach(pos => {
        const heart = document.createElement('div');
        heart.className = 'floating-heart';
        heart.innerText = 'üíñ';
        Object.assign(heart.style, pos, {
          fontSize: `${16 + Math.random() * 12}px`,
          animationDelay: `${Math.random() * 5}s`
        });
        document.body.appendChild(heart);
      });
    }

    addFloatingHearts();
  </script>

</body>
</html>
